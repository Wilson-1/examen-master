generator client {
  provider = "prisma-client-js"
  output   = "../src/prismacliente/db1"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String   @unique
  address   String
  cell      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  price     Float
  detail    String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id               Int       @id @default(autoincrement())
  owner            String
  product          String
  quantity_product Int
  total            Float
  time_order       DateTime  @default(now())
  time_exit        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
